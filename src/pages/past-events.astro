---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'

import EVENTS from '../data/past_events'
---

<Layout
  title='Past Events | LP Indonesia'
  description='A list of the past events that LP Indonesia has supported'
  imgUrl='/images/lpi-og-past-events.jpg'
>
  <a href='/' class='block mb-4 text-blue-500 lg:hover:underline'
    >‚Üê Back to Home</a
  >
  <h1 class='font-bold text-2xl mb-8'>Past Events</h1>
  <p class='mb-4'>
    Here are some of the past events that LP Indonesia has supported
  </p>
  <div class='grid grid-cols-1 md:grid-cols-2 gap-4'>
    {
      EVENTS.map(({ title, date, img, alt }) => (
        <Card title={title} date={date} img={img} alt={alt} />
      ))
    }
  </div>
</Layout>
